<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HerWatch"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold|italic"
                android:fontFamily="serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:text="walk with confidence"
                android:textColor="@color/pinktheme"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.1" />
        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="HerWatch Logo"
            android:src="@drawable/watchher_logo"
            android:padding="4dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/heading"
        android:clipToPadding="false"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Status Card -->
            <LinearLayout
                android:id="@+id/status_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_status"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monitoring"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:letterSpacing="0.2"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-light" />

                <TextView
                    android:id="@+id/tv_status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="SAFE"
                    android:textColor="@color/neon_green"
                    android:textSize="54sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <!-- Danger Confidence Card -->
            <LinearLayout
                android:id="@+id/danger_confidence_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_list"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danger Confidence"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <ProgressBar
                        android:id="@+id/pb_danger"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/tv_danger_percent"
                        android:max="100"
                        android:progress="12"
                        android:progressDrawable="@drawable/progress_danger" />

                    <TextView
                        android:id="@+id/tv_danger_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="12%"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Based on your recent biometrics"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tv_biometrics_values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="HR mean: --  \nHR std: --\nHR slope: --  \nSteps(20s): --\nAccel RMS: --  \nAccel peak: --\nPPG std: --  \nTime of day: --"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <!-- Guard Mode Card -->
            <LinearLayout
                android:id="@+id/guard_mode_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_list"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guard Mode"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="monitors more aggressively when activated"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_guard_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color" />
            </LinearLayout>

            <!-- Emergency Contacts Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_list"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tv_list_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Circle"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/shield_pink"
                        android:contentDescription="Emergency Contacts Icon" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@android:layout/simple_list_item_2" />
            </LinearLayout>

            <!-- Styled Add Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_open_add_contact"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/rounded_button_bg"
                android:text="+ Add to Circle"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>